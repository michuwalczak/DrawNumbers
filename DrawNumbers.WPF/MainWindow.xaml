<mah:MetroWindow x:Class="DrawNumbers.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawNumbers.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label x:Name="AmountOfNumbers_Label" Margin="10" Height="40" Width="100" Content="Amount of numbers"/>
            <TextBox x:Name="AmountOfNumbers_TextBox" Margin="10" Height="20" Width="100"/>

            <Label x:Name="DrawnNumbers_Label" Margin="10" Height="40" Width="100" Content="Drawn numbers"/>
            <TextBlock x:Name="DrawnNumbers_TextBlock" Margin="10" Height="20" Width="100" Text="{Binding NumbersUsage}"/>

            <Button x:Name="RunDraw_Button" Margin="10" Width="100" Height="20" Content="Draw" Click="RunDraw_Button_Click"/>
            <ProgressBar x:Name="ProgressBar" Margin="10" Style="{DynamicResource MahApps.Styles.ProgressBar}" Value="{Binding Progress}"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
